{{- if ( eq .chezmoi.os "darwin" ) -}}
#!/bin/sh

# install asdf if not alrady installed
if [ ! -d $HOME/.asdf ]; then
	git clone https://github.com/asdf-vm/asdf.git ~/.asdf
fi

source $HOME/.asdf/asdf.sh

{{ $asdf_packages := list
	"python"
	"golang"
	"sqlite"
	"httpie-go"
	"awscli"
-}}

{{ range ($asdf_packages | sortAlpha | uniq) -}}
asdf plugin-add {{ . }}
asdf install {{ . }} latest
asdf global {{ . }} latest
{{ end -}}

{{ end -}}
