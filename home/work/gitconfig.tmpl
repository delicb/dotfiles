[user]
    name = {{ .work_git_author_name }}
    email = {{ .work_git_author_email }}
{{ if not .ephemeral }}
    signingkey = {{ onepasswordRead "op://Private/SSH-CA/public key" }}

[gpg]
    format = ssh

[gpg "ssh"]
    program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[commit]
  gpgsign = true
{{ end }}
